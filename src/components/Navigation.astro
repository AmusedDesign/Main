<div class="navbar">
    <div class="nav-container">
        <div class="logo-wrap">
            <a class="logo" href="/">AMUSED <span class="logo-thin">DESIGN</span></a>
        </div>
        <div class="links-wrap">
                <a class="link" href="/tjenester">Tjenester</a>
                <a class="link" href="/portfolio">Portfolio</a>
                <a class="link" href="/om">Om</a>
                <a class="link" href="/fordeler">Fordeler</a">
            <div class="cta-wrap"><a class="cta" href="/kontakt">Kontakt</a></div>
        </div>
    </div>
</div>


<style>
    .navbar {
        position: absolute;
        width: 100%;
        height: 77px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        z-index: 100;
    }
    
    .nav-container {
        width: 100%;
        height: 100%;
        max-width: 95em;
        margin-inline: auto;
        padding: var(--container-padding);
        display: flex;
        justify-content: space-between;
    }

    .links-wrap {
        display: flex;
        gap: 40px;
    }

    .link {
        color: #F5F5F7;
        text-decoration: none;
        
        transition: opacity 350ms;
    }

    .logo-wrap {
        font-size: 21px;
    }

    .logo {
        text-decoration: none;
        font-weight: 700;
        color: white;


    }

    .logo-thin {
        font-weight: 400;
        color: #86868B;
    }

    .cta {
        padding: 12px 20px 12px 20px;
        background: #2C2E3A;
        border-radius: 100px;
        cursor: pointer;

        transition: ease-out 300ms;
    }



    /* HOVER EFFECTS */

    .link:hover {
        opacity: 0.7;
    }

    .cta:hover {
        background: var(--accent);
    }


    @media (max-width: 679px) {
        .link {
            display: none;
        }
    }

</style>